<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:background="#ffffff"
             android:fitsSystemWindows="true"
             android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <include
            android:id="@+id/graffiti__title_bar"
            layout="@layout/graffiti__title_bar"
            android:visibility="visible"/>

        <!--<FrameLayout-->
            <!--android:id="@+id/graffiti_container"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_alignParentTop="true" />-->

        <!--<TextView-->
        <!--android:id="@+id/tv_splite"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_below="@+id/graffiti_panel"-->
        <!--android:background="@drawable/graffiti_shader2"-->
        <!--android:text="下面是结果"-->
        <!--/>-->
        <RelativeLayout
            android:id="@+id/ll_showimage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/graffiti__title_bar"
            >
            <ImageView
                android:id="@+id/iv_showimage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/outputcats"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <!--<ImageView-->
            <!--android:id="@+id/iv_showimage"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="150dp"-->
            <!--android:layout_below="@+id/graffiti__title_bar"-->
            <!--android:background="@drawable/outputcats"-->
            <!--android:scaleType="centerInside"/>-->

        <TextView
            android:id="@+id/tv_splite"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/ll_showimage"
            android:background="@drawable/graffiti_shader2" />

        <RelativeLayout
            android:id="@+id/graffiti_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_splite">

            <FrameLayout
                android:id="@+id/graffiti_container"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_alignParentBottom="true">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_pen_hand"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_round"
                            android:scaleType="centerCrop"
                            android:text="手绘"
                            android:textColor="#000000"
                            android:textSize="13dp"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/btn_pen_copy"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_round"
                            android:scaleType="centerCrop"
                            android:text="仿制"
                            android:textColor="#000000"
                            android:textSize="13dp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btn_pen_eraser"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_round"

                            android:scaleType="centerCrop"
                            android:text="橡皮擦"
                            android:textColor="#000000"
                            android:textSize="13dp"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/btn_pen_text"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_round"
                            android:scaleType="centerCrop"
                            android:text="文字"
                            android:textColor="#000000"
                            android:textSize="13dp"
                            android:visibility="gone" />

                        <Button
                        android:id="@+id/btn_pen_bitmap"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/graffiti_btn_effect_round"
                        android:scaleType="centerCrop"
                        android:text="贴图"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:visibility="gone" />
                        <Button
                            android:id="@+id/btn_wall"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_round"
                            android:scaleType="centerCrop"
                            android:text="wall"
                            android:textColor="#163BF7"
                            android:textSize="13dp"
                            android:visibility="visible" />
                        <Button
                            android:id="@+id/btn_door"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_round"
                            android:scaleType="centerCrop"
                            android:text="door"
                            android:textColor="#9B000F"
                            android:textSize="13dp"
                            android:visibility="visible" />
                        <Button
                            android:id="@+id/btn_window"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_round"
                            android:scaleType="centerCrop"
                            android:text="window"
                            android:textColor="#136DFB"
                            android:textSize="13dp"
                            android:visibility="visible" />
                        <Button
                            android:id="@+id/btn_trim"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_round"
                            android:scaleType="centerCrop"
                            android:text="trim"
                            android:textColor="#FD8821"
                            android:textSize="13dp"
                            android:visibility="visible" />
                        <Button
                            android:id="@+id/btn_column"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_round"
                            android:scaleType="centerCrop"
                            android:text="column"
                            android:textColor="#F20017"
                            android:textSize="13dp"
                            android:visibility="visible" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:minWidth="10dp" />

                        <Button
                            android:id="@+id/btn_clear"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_round"
                            android:text="清屏"
                            android:textColor="#000000"
                            android:textSize="13dp" />

                        <Button
                            android:id="@+id/btn_undo"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_round"
                            android:text="撤销"
                            android:textColor="#000000"
                            android:textSize="13dp" />
                    </LinearLayout>

                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/bar_paint_mode"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btn_painter"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/graffiti_btn_effect_rect_line"

                        android:scaleType="centerCrop"
                        android:text="手绘"
                        android:textColor="#000000"
                        android:textSize="10dp"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_copy"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/graffiti_btn_effect_rect_line"

                        android:scaleType="centerCrop"
                        android:text="仿制"
                        android:textColor="#000000"
                        android:textSize="10dp"
                        android:visibility="visible" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/bar_shape_mode"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <Button
                            android:id="@+id/btn_hand_write"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_rect_line"
                            android:text="手绘"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/btn_arrow"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_rect_line"

                            android:text="箭头"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btn_line"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_rect_line"

                            android:text="直线"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btn_holl_circle"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_rect_line"

                            android:scaleType="centerCrop"
                            android:text="空心圆"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btn_fill_circle"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_rect_line"

                            android:scaleType="centerCrop"
                            android:text="实心圆"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btn_holl_rect"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_rect_line"

                            android:scaleType="centerCrop"
                            android:text="空心矩形"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btn_fill_rect"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_rect_line"

                            android:scaleType="centerCrop"
                            android:text="画建筑"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:visibility="visible" />
                        <Button
                            android:id="@+id/btn_cat"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_rect_line"

                            android:scaleType="centerCrop"
                            android:text="画猫"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:visibility="visible" />
                        <Button
                            android:id="@+id/btn_shoes"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_rect_line"

                            android:scaleType="centerCrop"
                            android:text="画鞋"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:visibility="visible" />
                        <Button
                            android:id="@+id/btn_bag"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_rect_line"

                            android:scaleType="centerCrop"
                            android:text="画包"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:visibility="visible" />
                        <Button
                            android:id="@+id/btn_test"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/graffiti_btn_effect_rect_line"

                            android:scaleType="centerCrop"
                            android:text="生成测试"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:visibility="visible" />

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/graffiti_btn_effect_rect_line"

                        android:padding="2dp">

                        <ImageView
                            android:id="@+id/btn_set_color"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />
                    </RelativeLayout>

                    <SeekBar
                        android:id="@+id/paint_size"
                        android:layout_width="260dp"
                        android:layout_height="33dp"
                        android:max="100"
                        android:maxHeight="33dp"
                        android:minHeight="33dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="10dp"
                        android:progressDrawable="@drawable/graffiti_seekbar_bg"
                        android:thumb="@drawable/graffiti_thumb_seekbarr"
                        android:thumbOffset="0dp" />

                    <TextView
                        android:id="@+id/paint_size_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:minWidth="40dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/graffiti_edit_container"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/title_bar_height"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/graffiti_selectable_edit_container"
                android:layout_toRightOf="@+id/graffiti_selectable_edit_container"
                android:background="#88000000"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_move_pic"
                    android:layout_width="@dimen/title_bar_height"
                    android:layout_height="@dimen/title_bar_height"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/graffiti_btn_effect_rect_pressed_black"

                    android:text="M"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_centre_pic"
                    android:layout_width="@dimen/title_bar_height"
                    android:layout_height="@dimen/title_bar_height"
                    android:background="@drawable/graffiti_btn_effect_rect_pressed_black"

                    android:text="O"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btn_amplifier"
                    android:layout_width="@dimen/title_bar_height"
                    android:layout_height="@dimen/title_bar_height"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/graffiti_btn_effect_rect_pressed_black"
                    android:src="@drawable/graffiti_btn_add" />

                <ImageView
                    android:id="@+id/btn_reduce"
                    android:layout_width="@dimen/title_bar_height"
                    android:layout_height="@dimen/title_bar_height"
                    android:background="@drawable/graffiti_btn_effect_rect_pressed_black"
                    android:src="@drawable/graffiti_btn_sub"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/graffiti_btn_rotate"
                    android:layout_width="@dimen/title_bar_height"
                    android:layout_height="@dimen/title_bar_height"
                    android:background="@drawable/graffiti_btn_effect_rect_pressed_black"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/graffiti_rotate"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/graffiti_selectable_edit_container"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/title_bar_height"
                android:layout_above="@+id/graffiti_edit_container"
                android:background="#88000000"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/graffiti_selectable_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/graffiti_btn_effect_rect_pressed_black"
                    android:gravity="center"
                    android:text="@string/graffiti_edit"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/graffiti_selectable_top"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/graffiti_btn_effect_rect_pressed_black"
                    android:gravity="center"
                    android:text="@string/graffiti_top"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/graffiti_selectable_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/graffiti_btn_effect_rect_pressed_black"
                    android:gravity="center"
                    android:text="@string/graffiti_remove"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
            </LinearLayout>
        </RelativeLayout>

        <!--<TextView-->
        <!--android:id="@+id/tv_splite"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_below="@+id/graffiti_panel"-->
        <!--android:background="@drawable/graffiti_shader2"-->
        <!--android:text="下面是结果"-->
